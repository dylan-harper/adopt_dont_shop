<h1>New Application</h1>
<%= bootstrap_form_with url: "/applications", method: :post, local: true do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :street_address %>
  <%= f.text_field :street_address %>
  <br>
  <%= f.label :city %>
  <%= f.text_field :city %>
  <br>
  <%= f.label :state %>
  <%= f.text_field :state %>
  <br>
  <%= f.label :zip_code %>
  <%= f.text_field :zip_code %>
  <br>
  <br>
  What qualifies you to be a pet owner?
  <br>
  <%= f.label :description %><br>
  <%= f.text_area :description %>
  <br>
  <%= f.hidden_field :status, :value => "In Progress" %>
  <%= f.submit %>
<% end %>
