<h1>New Application</h1>
<%= bootstrap_form_tag url: "/applications", method: :post, local: true do |f| %>


  <%= f.text_field :name, label: "Name ", required: true %>
  <br>

  <%= f.text_field :street_address, label: "Street Address ", required: true %>
  <br>

  <%= f.text_field :city, label: "City ", required: true %>
  <br>

  <%= f.text_field :state, label: "State ", required: true %>
  <br>

  <%= f.text_field :zip_code, label: "Zip Code ", required: true %>
  <br>
  <br>
  What qualifies you to be a pet owner?
  <br>
  <br>
  <%= f.text_area :description, required: true  %>
  <br>
  <%= f.hidden_field :status, :value => "In Progress" %>
  <%= f.submit %>
<% end %>
